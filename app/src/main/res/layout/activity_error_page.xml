<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_ion_white_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:id="@+id/iv_cloud_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_ion_white_logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/white_cloud_error" />



<TextView
        android:id="@+id/tv_app_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cloud_error"
        android:layout_centerHorizontal="true"
        android:text="Oops...something went wrong"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tv_try"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_app_down"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Please try again later."
        android:textColor="@android:color/white"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_try"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Go back"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_actual_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Go back"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>