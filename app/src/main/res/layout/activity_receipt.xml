<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_receipt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="cnergee.sbbroadband.ReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="35dp"
        android:background="@drawable/receipts_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="20dp">

                <cnergee.sbbroadband.widgets.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thank You"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorAccent"
                    app:fontName="@string/font_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">
                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Your Receipt"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Order No. 123456"
                        android:gravity="right"
                        android:textSize="@dimen/default_text_size"
                        app:fontName="@string/font_name"
                        android:textColor="@color/info_font"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="#DC143C"/>

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Price"
                        android:gravity="right"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="#DC143C"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Amount"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="\u20B9 5200"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_clr"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Discount"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="\u20B9 200"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_clr"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Fine"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="\u20B9 0"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_clr"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical">

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Total"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="\u20B9 5000"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="right">

                    <cnergee.sbbroadband.widgets.MyTextView
                        android:id="@+id/tv_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/back_to_home"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        app:fontName="@string/font_name"
                        android:textColor="@android:color/black"/>
                 </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
