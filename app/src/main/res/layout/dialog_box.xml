<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dialog_mob_login_padding" >

    <cnergee.sbbroadband.widgets.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/margin_left"
        android:text="Title"
        android:textColor="@color/theme_color"
        android:textSize="20sp"
        customfontdemo:fontName="@string/font_name" />

    <cnergee.sbbroadband.widgets.MyTextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:padding="@dimen/margin_left"
        android:text="Description"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/default_hdr_size"
        customfontdemo:fontName="@string/font_name" />

    <cnergee.sbbroadband.widgets.MyButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_message"
        android:text="@string/label_ok"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:textColor="@color/theme_color"
        customfontdemo:fontName="@string/font_name"/>

</RelativeLayout>